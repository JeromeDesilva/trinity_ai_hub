# ──────────────────────────────────────────
# Trinity Backend — Production Environment
# Copy this file to .env.prod on your GCP VM
# ──────────────────────────────────────────

# PostgreSQL
POSTGRES_USER=trinity
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=trinity_db

# Database connection (auto-constructed from above in docker-compose)
DATABASE_URL=postgresql://trinity:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/trinity_db

# JWT
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHAR_SECRET
JWT_EXPIRES_IN=7d

# Server
PORT=8080
NODE_ENV=production

# CORS — only allow your domain
CORS_ORIGIN=https://www.thetrinityservices.in

# Admin seed (first run only)
ADMIN_EMAIL=admin@thetrinityservices.in
ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD
ADMIN_NAME=Trinity Admin
